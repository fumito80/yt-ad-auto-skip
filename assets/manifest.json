{
  "version": "0.6.0",
  "name": "YT Ad Minimizer",
  "description": "Automate mute, fast forward, and the \"Skip\" button clicks on YouTube ads.",
  "manifest_version": 3,
  "icons": {
    "128": "promo128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
}