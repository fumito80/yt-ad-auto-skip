{
  "version": "0.14.0",
  "name": "YT Ad Max",
  "description": "Automate mute, fast-forward, and click the \"Skip\" button on YouTube ads.",
  "manifest_version": 3,
  "icons": {
    "128": "promo128.png"
  },
  "action": {
    "default_icon": {
      "48": "icon48.png"
    },
    "default_title": "YT Ad Max",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "script.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "prescript.js"
      ],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
}