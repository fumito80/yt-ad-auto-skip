{
  "version": "0.1.0",
  "name": "YT Ad Minimizer",
  "description": "Mutes ad on YouTube and clicks the skip button.",
  "manifest_version": 3,
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}